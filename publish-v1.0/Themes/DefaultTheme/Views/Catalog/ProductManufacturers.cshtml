@model IList<ManufacturerModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <dl class="manufacturers product-info clearfix">


        @if (Model.Count == 1)
        {
            <dt>品牌商：</dt>
        }
        else
        {
            <dt>@T("Products.Manufacturers")：</dt>
        }
        <dd>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                <a href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })">@item.Name</a>
                if (i != Model.Count - 1)
                {
                    <span class="separator">,</span>
                }
            }
        </dd>
    </dl>
}