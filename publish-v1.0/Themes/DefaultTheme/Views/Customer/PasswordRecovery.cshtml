<body>
    <div class="top">
        <div class="logo">
            <a href="/"><img src="~/Themes/DefaultTheme/Content/Images/logo.jpg" alt="瑞翠logo" /></a>
        </div>
    </div>

    <div class="suc_content forgetpassword">
        <div class="suc_kuang">
            <div class="hei_513">
                <p class="retrieve_pwd">取回帐户密码</p>
               
                @using (Html.BeginForm())
                {
                     <p class="p_tips">请输入您绑定帐户的邮箱、手机号码：</p>
                    <div class="forget_area" >
                        @Html.TextBoxFor(model => model.Email, new { @class = "input_kuang long_width item errortip", placeholder = "邮箱/手机号码" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "errormessage" })
                        @if (!String.IsNullOrEmpty(Model.Result))
                        {
                            @Model.Result
                        }
                    </div>
                    <div class="sub_bg">
                        <input class="no_bg" type="submit" value="下一步" name="send-email" />
                    </div>
                }
            </div>
            <div class="suc_botm"></div>
        </div>
    </div>
    <div class="footer" style="width:auto;">
        <ul class="links">
            <li class="copyright"><span>版权所有 © 2014 瑞翠商城 保留所有权利 </span></li>
        </ul>
    </div>
</body>
</html>


