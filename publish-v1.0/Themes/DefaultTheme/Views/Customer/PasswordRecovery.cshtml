@using Nop.Web.Models.Customer;
@{
    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
}



<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>瑞翠华光科技 - 找回密码</title>
    <link href="~/Themes/DefaultTheme/Content/css/register.css" rel="stylesheet" />
    <link href="/static/res/5e4408e/passport/css/index.css" rel="stylesheet" type="text/css" />
    <link href="/static/res/FXwO78u/css/passport/manfind.css" rel="stylesheet" type="text/css" />
    <script>
        var _hmt = _hmt || [];
        (function () {
            var hm = document.createElement("script");
            hm.src = "//hm.baidu.com/hm.js?c64922fe907004774c797344b7063851";
            var s = document.getElementsByTagName("script")[0];
            s.parentNode.insertBefore(hm, s);
        })();
    </script>

