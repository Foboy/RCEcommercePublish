@model LoginModel
@using Nop.Web.Models.Customer;
@using Nop.Core;
@using Nop.Core.Infrastructure;
@{
    Layout = null;

    //title
    Html.AddTitleParts(T("PageTitle.Login").Text);

    //register URL with return URL (if specified)
    var registerUrl = Url.RouteUrl("Register");
    if (!String.IsNullOrEmpty(this.Context.Request.QueryString["returnUrl"]))
    {
        var webHelper = EngineContext.Current.Resolve<IWebHelper>();
        registerUrl = webHelper.ModifyQueryString(registerUrl, "returnurl=" + HttpUtility.UrlEncode(this.Context.Request.QueryString["returnUrl"]), null);
    }
}

<!DOCTYPE html>
<html ng-app="gogojp">
<head>
    <meta charset="UTF-8">
    <title>瑞翠商城后台登陆</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <meta name="description" content="瑞翠商城后台登陆" />
    <!-- bootstrap 3.0.2 -->
    <link href="/Administration/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- font Awesome -->
    <link href="/Administration/Content/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="/Administration/Content/css/bootstrap-sco/sco.message.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="/Administration/Content/css/AdminLTE.css" rel="stylesheet" type="text/css" />
    <link href="/Administration/Content/css/gogojp.css" rel="stylesheet" type="text/css" />
    <script src="/Administration/Content/js/jquery-1.10.2.js" type="text/javascript"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
    <style type="text/css">
        .showerror .ng-invalid {
            border-color: #fa787e;
        }

        .ng-invalid.ng-dirty {
            border-color: #fa787e;
        }

        .ng-valid.ng-dirty {
            border-color: #1ABC9C;
        }
    </style>
</head>
<body ng-controller="UserMainCtrl">
    <div class="form-box">
        <div class="header">
            瑞翠商城后台
        </div>
        <form name="LoginForm" action="/login?ReturnUrl=%2fadmin" method="post" ng-class="showerror?'showerror':''">
            <div class="body bg-gray">
                <div class="form-group">
                    <input type="text" ng-model="User.user_name" ng-pattern="/^[a-z\d]{2,64}$/i" ng-required="true" placeholder="用户名" name="Email" class="form-control" autofocus />
                </div>
                <div class="form-group">
                    <input type="password" ng-model="User.password" ng-required="true" ng-minlength="6" placeholder="密码" name="Password" class="form-control" />
                </div>
                <div class="form-group">
                        @Html.CheckBoxFor(m => m.RememberMe) 记住我
                </div>
            </div>
            <div class="bg-gray footer">
                <button type="submit" class="btn bg-olive btn-block">
                    登陆
                </button>
            </div>
        </form>
    </div>
    <div class="graycolor footer_info">
        © 2014 www.rc1314.com 滇ICP备11015046号-3 云南公网安备11010502024911
    </div>
    <script src="/Administration/Content/js/bootstrap.min.js" type="text/javascript">
    </script>
</body>
</html>

